<!-- add_employee.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Employee</title>
    <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
    <div class="container">
        <h2>Add New Employee</h2>
        <form action="/employees/admin/add/employee" method="POST" enctype="multipart/form-data">

           <% if (error) { %>
              <p class="error-message"><%= error %></p>
           <% } %>

           <% if (success) { %>
            <p class="success-message"><%= error %></p>
         <% } %>

            <label for="fname">First Name</label>
            <input type="text" name="fname" required>

            <label for="lname">Last Name</label>
            <input type="text" name="lname" required>

            <label for="email">Email</label>
            <input type="email" name="email" required>

            <label for="password">Password</label>
            <input type="password" name="password" required>

            <label for="age">Age</label>
            <input type="number" name="age" required>

            <label for="gender">Gender</label>
            <select name="gender" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>

            <label for="status">Status</label>
            <input type="text" name="status" required>

            <label for="bg">Blood Group</label>
            <input type="text" name="bg">

            <label for="address">Address</label>
            <textarea name="address" required></textarea>

            <label for="category">Category</label>
            <input type="text" name="category" required>

            <label for="profile">Profile Picture</label>
            <input type="file" name="profile" required>

            <button type="submit">Add Employee</button>
            <a href="/employees/admin/view/employees"><button type="button" style="width: 580px; background-color: rgb(103, 213, 213);">Back</button></a>
        </form>
    </div>
</body>
</html>
